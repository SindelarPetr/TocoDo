<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 xmlns:main="clr-namespace:TocoDo.Pages.Main;assembly=TocoDo"
			 x:Class="TocoDo.Pages.Main.MainTabbedPage" 
			NavigationPage.BarBackgroundColor="Red"
			NavigationPage.HasNavigationBar="True">
	<main:TasksPage Title="Tasks" BackgroundColor="{StaticResource BackgroundColor}" NavigationPage.BarBackgroundColor="Red"/>
	<main:TodayPage Title="Today" BackgroundColor="{StaticResource BackgroundColor}" NavigationPage.BarBackgroundColor="Red"/>
	<main:HabitsPage Title="Habits" BackgroundColor="{StaticResource BackgroundColor}" NavigationPage.BarBackgroundColor="Red"/>
</TabbedPage>