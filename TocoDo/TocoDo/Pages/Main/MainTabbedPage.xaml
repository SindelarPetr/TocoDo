<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 xmlns:main="clr-namespace:TocoDo.Pages.Main;assembly=TocoDo"
			 x:Class="TocoDo.UI.Pages.Main.MainTabbedPage" >

	<main:TasksPage Title="Tasks">
		<main:TasksPage.Icon>
			<OnPlatform x:TypeArguments="FileImageSource">
				<On Platform="iOS" Value="ic_done_white_24dp.png"/>
			</OnPlatform>
		</main:TasksPage.Icon>
	</main:TasksPage>

	<main:TodayPage Title="Calendar">
		<main:TodayPage.Icon>
			<OnPlatform x:TypeArguments="FileImageSource">
				<On Platform="iOS" Value="ic_today_white_24dp.png"/>
			</OnPlatform>
		</main:TodayPage.Icon>
	</main:TodayPage>

	<main:HabitsPage Title="Habits">
		<main:HabitsPage.Icon>
			<OnPlatform x:TypeArguments="FileImageSource">
				<On Platform="iOS" Value="ic_event_available_white_24dp.png"/>
			</OnPlatform>
		</main:HabitsPage.Icon>
	</main:HabitsPage>
</TabbedPage>