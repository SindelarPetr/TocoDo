<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 x:Class="TocoDo.Views.Habits.HabitView"
			 x:Name="This">
	<ContentView.Content>
		<StackLayout Spacing="0">
			<Label Text="{Binding ModelTitle}" FontSize="Large" FontAttributes="Bold" TextColor="Black"/>
			<StackLayout Padding="10,0,0,0">
				<Label Text="Schedule time" FontSize="12"/>
				<Label Text="{Binding ModelDescription}" FontSize="Small" />
			</StackLayout>
		</StackLayout>
	</ContentView.Content>
</ContentView>