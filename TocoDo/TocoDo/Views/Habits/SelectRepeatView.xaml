<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:properties="clr-namespace:TocoDo.Properties;assembly=TocoDo"
             x:Class="TocoDo.Views.Habits.SelectRepeatView"
             BackgroundColor="#77000000">
	<ContentView.GestureRecognizers>
		<TapGestureRecognizer ></TapGestureRecognizer>
	</ContentView.GestureRecognizers>
	<ContentView.Content>
		<StackLayout>
          <Frame Margin="0" VerticalOptions="Center" HorizontalOptions="Center" HasShadow="True">
			  <StackLayout>
				  <Label Text="{x:Static properties:Resources.RepeatEvery}" FontSize="Large" FontAttributes="Bold" TextColor="Black"/>
				  <StackLayout Orientation="Horizontal">
						<Entry Keyboard="Numeric"></Entry>
				  </StackLayout>
			  </StackLayout>
          </Frame>
      </StackLayout>
  </ContentView.Content>
</ContentView>